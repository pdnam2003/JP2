<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<BorderPane xmlns:fx="http://javafx.com/fxml" prefHeight="600.0" prefWidth="800.0" fx:controller="com.example.userfood.Controller.UserFoodController">
    <top>
        <HBox spacing="10" alignment="CENTER">
            <ComboBox fx:id="categoryCombo" prefWidth="150">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Tất cả"/>
                        <String fx:value="Đồ uống"/>
                        <String fx:value="Đồ Ăn"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <TextField fx:id="searchField" promptText="Tìm sản phẩm " />
            <Button text="Tìm kiếm" />
        </HBox>
    </top>
    <center>
        <FlowPane  fx:id="flowPane" hgap="10" vgap="10" alignment="CENTER">

            <VBox alignment="CENTER" spacing="5">
                <ImageView fx:id="image1" fitHeight="100" fitWidth="100" />
                <Text text="Trà sữa" />
                <Text text="27,000 VND" />
            </VBox>
            <VBox alignment="CENTER" spacing="5">
                <ImageView fx:id="image2" fitHeight="100" fitWidth="100" />
                <Text text="Soda chanh" />
                <Text text="27,000 VND" />
            </VBox>
            <VBox alignment="CENTER" spacing="5">
                <ImageView fx:id="image3" fitHeight="100" fitWidth="100" />
                <Text text="Cơm trưa" />
                <Text text="27,000 VND" />
            </VBox>
            <VBox alignment="CENTER" spacing="5">
                <ImageView fx:id="image4" fitHeight="100" fitWidth="100" />
                <Text text="Mì gói" />
                <Text text="20,000 VND" />
            </VBox>
            <VBox alignment="CENTER" spacing="5">
                <ImageView fx:id="image5" fitHeight="100" fitWidth="100" />
                <Text text="Sữa chua lắc" />
                <Text text="25,000 VND" />
            </VBox>
            <VBox alignment="CENTER" spacing="5">
                <ImageView fx:id="image6" fitHeight="100" fitWidth="100" />
                <Text text="Lipton soda" />
                <Text text="18,000 VND" />
            </VBox>
            <VBox alignment="CENTER" spacing="5">
                <ImageView fx:id="image7" fitHeight="100" fitWidth="100" />
                <Text text="Mì xào bò" />
                <Text text="30,000 VND" />
            </VBox>
            <VBox alignment="CENTER" spacing="5">
                <ImageView fx:id="image8" fitHeight="100" fitWidth="100" />
                <Text text="Cà phê đen" />
                <Text text="15,000 VND" />
            </VBox>
        </FlowPane>
    </center>
</BorderPane>